[user]
	name = Craig P. Motlin
	useconfigonly = true
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
	interactive = auto
	pager = true
[alias]
	ci = commit
	co = checkout
	st = status
	cp = cherry-pick
	ri = rebase --interactive --autosquash
	ss = status -s
	br = branch
	f  = fetch --all --prune
	rp = rebase --committer-date-is-author-date --preserve-merges
	unstage = reset HEAD --
	tree = "forest --pretty=format:\"%C(red)%h %C(magenta)(%ar) %C(blue)%an %C(reset)%s\" --style=15 --reverse"
	gl = log --graph --decorate --date=short --format=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(magenta)%an%C(reset)'
	ga = log --graph --decorate --date=short --format=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(magenta)%an%C(reset)' --all
	l  = log --graph --decorate --date=short --format=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(magenta)%an%C(reset)' --all
	gb = log --graph --decorate --date=short --format=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset)%C(auto)%d%C(reset) %C(normal)%s%C(reset) %C(magenta)%an%C(reset)' --branches
	m = mergetool --no-prompt --tool=vimdiff
	detach = checkout --detach
[core]
	filemode = false
	autocrlf = input
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[http]
	sslVerify = false
[diff]
	renames = copies
	renameLimit = 100000
[rerere]
	enabled = true
[branch]
	autosetuprebase = always
	autosetupmerge = always
[push]
	default = simple
[merge]
	tool = intellij
[clean]
	requireForce = false
[log]
	decorate = short
[interactive]
	diffFilter = diff-highlight
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[mergetool]
	keepBackup = false
[help]
	autocorrect = 1
